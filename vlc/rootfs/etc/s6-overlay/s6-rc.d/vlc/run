#!/command/with-contenv bashio
# shellcheck shell=bash
# ==============================================================================
# Start VLC service
# ==============================================================================
readonly PASSWORD="$(cat /data/secret)"

# Send out discovery information to Home Assistant
/etc/s6-overlay/scripts/vlc-discovery &

# Run daemon
exec cvlc -I http --no-dbus --extraintf telnet --http-host 127.0.0.1 --telnet-port 4213 --http-password "INGRESS" --telnet-password "gto8101" --aout=pulse
